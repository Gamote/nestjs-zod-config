{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "strict": true,
    "removeComments": false,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
